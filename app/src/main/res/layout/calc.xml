<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#e22525">
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fffefe"
        android:layout_weight="1">


        <ImageButton
            android:src="@drawable/del"
            android:layout_span="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset"
            android:layout_weight="1"
            android:contentDescription="@string/reset1"
            android:layout_column="0" />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView"
            android:layout_weight="1"
            android:textSize="55sp"
            android:layout_span="0"
            android:layout_column="1" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dd2323"
        android:layout_weight="1">


        <ImageButton
            android:src="@drawable/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_weight="1"
            android:contentDescription="@string/button1"
            android:layout_column="0"
            android:layout_span="0" />


        <ImageButton
            android:src="@drawable/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:contentDescription="@string/button2"
            android:layout_column="1"
            android:layout_span="0" />




        <ImageButton
            android:src="@drawable/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:contentDescription="@string/button3"
            android:layout_column="2"
            android:layout_span="0" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <ImageButton
            android:src="@drawable/b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:contentDescription="@string/button4"
            android:layout_span="0" />


        <ImageButton
            android:src="@drawable/b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:contentDescription="@string/button5"
            android:layout_span="0" />



        <ImageButton
            android:src="@drawable/b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:contentDescription="@string/button6"
            android:layout_span="0" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <ImageButton
            android:src="@drawable/b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_weight="1"
            android:contentDescription="@string/button7"
            android:layout_span="0" />


        <ImageButton
            android:src="@drawable/b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:layout_weight="1"
            android:contentDescription="@string/button8"
            android:layout_span="0" />


        <ImageButton
            android:src="@drawable/b9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:layout_weight="1"
            android:contentDescription="@string/button9"
            android:layout_span="0" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <ImageButton
            android:src="@drawable/mult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plus"
            android:layout_weight="1"
            android:contentDescription="@string/plus"
            android:layout_span="0" />


        <ImageButton
            android:src="@drawable/b0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button11"
            android:layout_weight="1"
            android:contentDescription="@string/button11"
            android:layout_span="0" />


        <ImageButton
            android:src="@drawable/mult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minus"
            android:layout_weight="1"
            android:contentDescription="@string/minus"
            android:layout_span="0" />


    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <ImageButton
            android:src="@drawable/mult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiply"
            android:layout_weight="1"
            android:contentDescription="@string/multiply"
            android:layout_span="0" />


        <ImageButton
            android:src="@drawable/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:layout_weight="1"
            android:contentDescription="@string/result"
            android:layout_span="0" />


        <ImageButton
            android:src="@drawable/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/division"
            android:layout_weight="1"
            android:contentDescription="@string/division"
            android:layout_span="0" />

    </TableRow>


</TableLayout>